{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<div class="shadow-lg p-3 mb-5 bg-body rounded redirect">
    <h3>Inscription</h3>

    {{ form_start(registrationForm) }}
    <fieldset><legend>Mon identité</legend> 
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.nom) }}
        {{ form_row(registrationForm.prenom) }}
        {{ form_row(registrationForm.telephone) }}
        {{ form_row(registrationForm.taille) }}
    </fieldset>
    <fieldset>
        <legend>Mes coordonnées</legend>
            {{ form_row(registrationForm.adresse) }}
            {{ form_row(registrationForm.ville) }}
    </fieldset>
        
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
        {{ form_row(registrationForm.RGPDConsent) }}
        <br>
        <button type="submit" class="btn btn-outline-success">S'inscrire</button>
        <a href = "{{ path('app_login') }}"><button class="btn btn-outline-primary" type="button"> Se connecter </button></a>
    {{ form_end(registrationForm) }}
</div>
{% endblock %}
