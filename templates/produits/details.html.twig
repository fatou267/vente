{% extends 'base.html.twig' %}

{% block title %}Produits{% endblock %}


{% block body %}

<div class="card mb-3" style="max-width: 540px;">
  <div class="row g-0">
    <div class="col-md-4">
      <img src="{{ asset('images/' ~ produits.image) }}" class="img-fluid rounded-start" alt="...">
    </div>
    <div class="col-md-8">
      <div class="card-body">
      <h5 class="card-title">{{ produits.nom}}</h5>
      {% for category in categories %}
      {% for sousCate in sousCategories %}
      {% if (sousCate.getIdCate() == category ) %}
      {% if (sousCate.id == produits.IdSousCate.id) %}
        <p class="card-text">Catégorie : {{ sousCate.nom}} - {{ category.nom }}</p>
        {% endif %}
        {% endif %}
        {% endfor %}
        {% endfor %}
        <p class="card-text">{{ produits.description }}</p>
        <p class="card-text"><small class="text-muted">{{ produits.prix }} € </small></p>

        <a href="{{ path('panier_add', {id:produits.id} )}}" class="btn btn-primary">Acheter au panier</a>
      </div>
    </div>
  </div>
</div>
<br>
<p class="text-center"><a href="{{ path('app_sous_categorie', {id: produits.IdSousCate.id} ) }}" class="sous btn btn-outline-primary">Plus de produits</a></p>


<br> 

 

{% endblock %}
